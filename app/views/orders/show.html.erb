<div class="page-content">
  <h1><strong>Order Details</strong></h1>
    <div class="well col-md-12 table-responsive" id="order-<%= @order.id %>">
      <table class="table">
        <thead>
          <tr>
            <td colspan="6" class="text-left">
              <strong>Order # <%= @order.id %></strong>
              <p><strong>Placed: <%= @order.date %></strong></p>
              <strong>Status: <%= @order.status %></strong>
            </td>
          </tr>
          <tr>
            <th>Event</th>
            <th>Supporting Act</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Subtotal</th>
            <th>Last Updated</th>
          </tr>
        </thead>
        <tbody>
          <% @order.events.each do |event| %>
            <tr id="event-<%= event.id %>">
              <td><%= link_to event.title, event_path(event.venue, event) %></td>
              <td><%= event.supporting_act %></td>
              <td><%= @order.event_quantity(event) %></td>
              <td><%= number_to_currency(event.price) %></td>
              <td><%= number_to_currency(@order.sub_total(event)) %></td>
              <td><%= @order.time_updated %></td>
            </tr>
          <% end %>
        <tr>
          <td colspan="5" class="text-right">
            <strong>Total: <%= number_to_currency(@order.total) %></strong>
          </td>
          <td colspan="5" class="text-right">
            <%= link_to "Order History", orders_path, class: 'btn btn-primary' %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
