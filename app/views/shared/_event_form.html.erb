<div class="well center-form">
  <%= form_for(@event, url: path) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :supporting_act, "Supporting Act" %>
      <%= f.text_field :supporting_act, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :date %>
      <%= f.date_field :date, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, min: 0, step: 0.01, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :category_id %>
      <%= f.select :category_id, event_categories, {}, class: 'form-control' %>
    </div>
    <% if platform_admin? %>
      <div class="form-group">
        <%= f.label :venue_id %>
        <%= f.select :venue_id, event_venues, {}, class: 'form-control' %>
      </div>
    <% end %>
    <%= f.submit "#{button}", class: 'btn btn-success' %>
    <% if request.referrer %>
      <%= link_to "Cancel", request.referrer, class: 'btn btn-primary' %>
    <% else %>
      <%= link_to "Cancel", admin_dashboard_index_path, class: 'btn btn-primary' %>
    <% end %>
  <% end %>
</div>
